<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane maxHeight="550" maxWidth="450" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1100" prefWidth="900" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GameController">
   <top>
      <ButtonBar fx:id="bbar" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
        	<Label text="" fx:id="winnerstatus" />
            <Label text="Rows" />
            <TextField maxWidth="20." prefHeight="25.0" text="6" />
            <Label text="Columns" />
            <TextField maxWidth="20.0" prefHeight="25.0" text="7" />
          	<Button id="new" fx:id="newgame" mnemonicParsing="false" text="New Game" />
        </buttons>
      </ButtonBar>
   </top>
   <center>
      <GridPane fx:id="gridcontainer" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>
</BorderPane>
